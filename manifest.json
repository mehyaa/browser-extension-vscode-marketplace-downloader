{
  "manifest_version": 3,
  "name": "VS Code Marketplace Downloader",
  "description": "Adds a download button to Visual Studio Code Marketplace extension pages.",
  "version": "1.0.1",
  "homepage_url": "https://github.com/mehyaa/browser-extension-vscode-marketplace-downloader",
  "content_scripts": [
    {
      "matches": [
        "https://marketplace.visualstudio.com/items?*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png",
      "128": "icons/icon-128.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "@mehyaa.vscode-marketplace-downloader",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  }
}